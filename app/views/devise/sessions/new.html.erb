<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	<fieldset>
		<div class="clearfix">
		  <%= f.label :email %>
			<div class="input">
		  	<%= f.text_field :email, :autocomplete => "off" %>
			</div>
		</div>
		<div class="clearfix">
	  	<%= f.label :password %>
			<div class="input">
		  	<%= f.password_field :password %>
			</div>
		</div>

	  <% if devise_mapping.rememberable? -%>
		<div class="clearfix">
			<div class="input">
	    	<%= f.check_box :remember_me %> <span>Remember me</span>
			</div>
		</div>
	  <% end -%>

		<div class="actions">
		  <%= f.submit "Sign in", :class => "btn primary" %></p>
		</div>
	</fieldset>
<% end %>

<%= render :partial => "devise/shared/links" %>

<script type="text/javascript">
	$("#user_email").focus();
</script>